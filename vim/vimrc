set nocompatible

call plug#begin('~/.vim/plugged')
Plug 'NLKNguyen/papercolor-theme'
Plug 'ambv/black'
Plug 'chase/vim-ansible-yaml'
Plug 'itchyny/lightline.vim'
Plug 'junegunn/fzf', { 'dir': '~/.fzf', 'do': './install --all' }
Plug 'junegunn/fzf.vim'
Plug 'majutsushi/tagbar'
Plug 'mileszs/ack.vim'
Plug 'octol/vim-cpp-enhanced-highlight'
Plug 'raichoo/purescript-vim'
Plug 'rhysd/committia.vim'
Plug 'scrooloose/nerdtree'
Plug 'tmhedberg/matchit'
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-fugitive'
Plug 'tpope/vim-git'
Plug 'tpope/vim-markdown'
Plug 'tpope/vim-surround'
Plug 'w0rp/ale'
call plug#end()

filetype plugin indent on

set autoindent
set backspace=indent,eol,start
set clipboard=unnamed
set confirm
set copyindent
set cursorline
set encoding=utf-8
set hidden
set history=256
set hlsearch
set ignorecase
set incsearch
set laststatus=2
set lazyredraw
set list "show whitepspace
set listchars=tab:>·,trail:·,nbsp:~
set modelines=0
set nobackup
set nojoinspaces
set pastetoggle=<F10>
set preserveindent
set ruler
set scrolloff=3
set shell=zsh
set shortmess=atI
set showbreak=+++
set showcmd
set showmatch
set showmode
set smartcase
set smartindent
" Auto reformat using (visual mode 'gq')
set textwidth=79
set title
set ttyfast
set visualbell
set wildmenu
set wildmode=list:longest

""
"" Color Scheme
""

colorscheme PaperColor
set background=light
set t_Co=256
syntax on

""
"" Mapping
""

let mapleader = ","
nnoremap , <Nop>

" Clear highlight search
nnoremap <leader>n :nohlsearch<CR>

" Swap similar keys
nnoremap ' `
nnoremap ` '

" Scroll the viewport faster
nnoremap <c-e> 4<c-e>
nnoremap <c-y> 4<c-y>
vnoremap <c-e> 4<c-e>
vnoremap <c-y> 4<c-y>

" Navigate splits
nnoremap <c-h> <c-w>h
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k
nnoremap <c-l> <c-w>l

" Catch trailing whitespace
nnoremap <silent> <leader>rtw :%s/\s\+$//e<CR>

" Jump to last position in file after opening. Nice!
autocmd BufReadPost *
\ if line("'\"") > 0 && line("'\"") <= line("$") |
\   exe "normal! g`\"" |
\ endif

" Tags
set tags=tags;~

" Spell checking
set spelllang=en_us
nnoremap <silent> <leader>s :set spell!<CR>

" Inserting dates
inoremap <C-g><C-t> [<C-r>=strftime("%d/%b/%y %H:%M")<CR>]

" Mouse
set mouse=a

if executable("ag")
  set grepprg=ag\ --vimgrep\ $*
  set grepformat=%f:%l:%c:%m
endif

""
"" Plugins
""

" NERD Tree
nnoremap <silent> <leader>d :execute 'NERDTreeToggle ' . getcwd()<CR>

" tagbar
let g:tagbar_ctags_bin = "/usr/bin/ctags"
nnoremap <silent> <leader>t :TagbarOpenAutoClose<CR>
nnoremap <silent> <leader>T :TagbarToggle<CR>

" fzf.vim
nnoremap <leader>fb :Buffers<CR>
nnoremap <Leader>ff :Files<CR>
nnoremap <Leader>ft :Tags<CR>

" Ack
cnoreabbrev Ack Ack!
nnoremap <Leader>a :Ack!<Space>
let g:ack_autoclose=1
if executable('ag')
  let g:ackprg = 'ag --vimgrep --smart-case -s -H --nocolor --nogroup --column'
endif

" lightline
let g:lightline = { 'colorscheme': 'PaperColor' }

" Asynchronous Lint Engine (ALE)
let g:ale_statusline_format = ['⨉ %d', '⚠ %d', '⬥ ok']

" ale prettier
let g:ale_fixers = {}
let g:ale_fixers['javascript'] = ['prettier']
