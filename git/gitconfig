[user]
	name = Emiel van de Laar
	email = gemiel@gmail.com

[core]
	pager = less -FRSX
	editor = vim

[color]
	branch = auto
	ui = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = blue bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	br = branch
	ci = commit
	df = diff -w
	lg = log -p
	lgcmp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset | %an' --abbrev-commit --date=relative
	lgg = log --graph --oneline --decorate --all
	lgl = log --oneline
	rs = restore
	st = status
	sw = switch

[fetch]
	prune = true

[merge]
	tool = opendiff

[push]
	default = simple

[pull]
	rebase = true

[sendemail]
	annotate = yes
	smtpencryption = tls
	smtpserver = dragon.ttyout.net
	smtpserverport = 587
	smtpuser = emiel
	verify = off
