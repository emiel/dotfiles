[user]
	name = Emiel van de Laar

[advice]
	skippedCherryPicks = false

[core]
	editor = vim
	pager = less -FRSX

[init]
	defaultBranch = main

[color]
	branch = auto
	ui = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	frag = magenta bold
	meta = blue bold
	new = green bold
	old = red bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[column]
	ui = auto

[branch]
	sort = committerdate

[diff]
	algorithm = histogram
	colorMoved = plain
	colorMovedWS = allow-indentation-change
	mnemonicPrefix = true
	renames = true

[fetch]
	all = true
	prune = true
	pruneTags = true

[log]
	date = iso-local

[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true

[stash]
	showPatch = true

[pull]
	rebase = true

[push]
	autoSetupRemote = true
	followTags = true

[tag]
	sort = version:refname

[sendemail]
	annotate = true
	smtpencryption = tls
	smtpserver = dragon.ttyout.net
	smtpserverport = 587
	smtpuser = emiel
	verify = off

[alias]
	br = branch
	brl = branch -vv
	ci = commit
	co = checkout
	df = diff
	lg = log -p
	lgcmp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset | %an' --abbrev-commit --date=relative
	lgg = log --graph --oneline --decorate --all
	lgl = log --oneline
	rs = restore
	st = status
	sw = switch

[includeIf "hasconfig:remote.*.url:git@github.com:emiel/**"]
	path = ./default/config

[includeIf "hasconfig:remote.*.url:git@github.com:smokeyfeet/**"]
	path = ./default/config

[includeIf "hasconfig:remote.*.url:git@github.com:smartpr/**"]
	path = ./smartpr/config
[help]
	autocorrect = prompt
[commit]
	verbose = true
[rerere]
	enabled = true
	autoupdate = true
