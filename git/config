[user]
	name = Emiel van de Laar

[core]
	pager = less -FRSX
	editor = vim

[init]
	defaultBranch = main

[color]
	branch = auto
	ui = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = blue bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[diff]
	colorMoved = true
	colorMovedWS = allow-indentation-change

[fetch]
	prune = true

[log]
	date = iso-local

[rebase]
	autosquash = true

[stash]
	showPatch = true

[pull]
	rebase = true

[sendemail]
	annotate = true
	smtpencryption = tls
	smtpserver = dragon.ttyout.net
	smtpserverport = 587
	smtpuser = emiel
	verify = off

[alias]
	br = branch
	ci = commit
	co = checkout
	df = diff
	lg = log -p
	lgcmp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset | %an' --abbrev-commit --date=relative
	lgg = log --graph --oneline --decorate --all
	lgl = log --oneline
	rs = restore
	st = status
	sw = switch

[includeIf "hasconfig:remote.*.url:git@github.com:emiel/**"]
	path = config-emiel.inc

[includeIf "hasconfig:remote.*.url:git@github.com:smokeyfeet/**"]
	path = config-emiel.inc

[includeIf "hasconfig:remote.*.url:git@gitlab.com:tiqets/**"]
	path = config-tiqets.inc
